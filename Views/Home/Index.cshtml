@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}
@if (!Model.Any())
{
    <div class="alert alert-warning mt-4">
        <h4 class="alert-heading">No Games !</h4>
        <p class="mb-2">No games were Added yet</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card border-success mb-3 text-decoration-none" style="max-width :20rem;" asp-controller="Games" asp-action="Show" asp-route-id="@game.Id">
                    <h5 class="card-header">@game.Name</h5>
                    <div class="card-body" style="background-image :url(@($"{ImageSettings.ImagesPath}/{game.Cover}"));
                    background-size:cover; background-position:center; height:400px">
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <span class="badge bg-success">@game.Category.Name</span>
                        <div>
                            @foreach (var platform in @game.Platforms)
                            {
                                <i class="@platform.Icone  me-2 fs-4"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}

