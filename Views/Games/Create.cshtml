@model CreateGameFormViewModel
@{
    ViewData["Title"] = "Add Game";
}
<h5 class="mt-3">
    <i class="bi bi-plus-circle-dotted"></i>
    Add New Game
</h5>
<form asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-2"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Game Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-2"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="Model.Categories">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectdPlatforms" class="form-label mt-2"></label>
                <select class="form-select" asp-for="SelectdPlatforms" asp-items="Model.Platforms">
                    <option>Select Platforms</option>
                </select>
                <span asp-validation-for="SelectdPlatforms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-2"></label>
                <textarea type="text" class="form-control" asp-for="Description" placeholder="Game Description"></textarea>
                <span asp-validation-for="Description" class="text-danger "></span>
            </div>
            <div class="form-group">
                <label asp-for="Cover" class="form-label mt-2"></label>
                <input type="file" class="form-control" asp-for="Cover"
                       data-rule-extension="@ImageSettings.AllowedExtensions.Replace(".",string.Empty)"
                       data-msg-extension="Not Allowed Extension">
                <small class="form-text text-muted d-block">
                    Only @ImageSettings.AllowedExtensions files are allowed with max size
                    @ImageSettings.MaxSizeInMBs MB
                </small>
                <span asp-validation-for="Cover" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Add Game</button>
        </div>
        <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
            <img class="cover-preview d-none " alt="cover" />
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/gameform.js" asp-append-version="true"></script>
}