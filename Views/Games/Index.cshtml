@model IEnumerable<Game>
@{
    ViewData["Title"] = "Games";
}
<a class="btn btn-primary btn-lg mt-3" asp-action="Create" asp-controller="Games">
    <i class="bi bi-plus-circle-dotted"></i>
    Add Game
</a>
@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">No Games !</h4>
        <p class="mb-2">No games were Added yet</p>
    </div>
}
else
{
    <div class="mt-3">
        <table class="table table-bordered table-Default">
            <tbody>
                @foreach (var game in Model)
                {
                    <tr class="border-3 border-Secondary">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="pe-4">
                                    <img src="@($"{ImageSettings.ImagesPath}/games/{game.Cover}")" alt="@game.Name" style="height: 100px; width: auto;" />
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                    <h4 class="text-light mb-0">@game.Name</h4>
                                    <h5 class="mb-0">@game.Category?.Name</h5>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@game.Id">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <a href="javascript:;" class="btn btn-danger rounded rounded-3 js-delete" data-id="@game.Id">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
@section Scripts {
    <script src="~/js/games-index.js" asp-append-version="true"></script>
}
